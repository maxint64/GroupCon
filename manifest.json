{
    "manifest_version": 2,
    "name": "GroupCon",
    "version": "0.5",
    "background": {
        "scripts": [
            "js/jquery.js", 
            "js/background.js"
        ],
        "persistent": false
    },
    "content_scripts": [{
        "matches": [
            "http://www.douban.com/group/", 
            "http://www.douban.com/group/?start=*"
        ],
        "js": [
            "js/jquery.js", 
            "js/lib.js", 
            "js/bootstrap.customized.js",
            "js/contens.js"
        ],
        "css": [
            "css/bootstrap.customized.css"
        ]
    }],
    "permissions": [
        "tabs",
        "background", 
        "contentSettings", 
        "storage", 
        "http://www.douban.com/group/topic/*"
    ],
    "web_accessible_resources": [
        "img/glyphicons-halflings.png", 
        "img/icon-rheart.png", 
        "img/loading.gif", 
        "img/loading.big.gif", 
        "css/bootstrap.customized.css"
    ],
    "options_page": "html/options.html"
}
